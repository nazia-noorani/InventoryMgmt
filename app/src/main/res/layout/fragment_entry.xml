<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_add_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name :"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:id="@+id/textView_item_name"
            android:layout_marginTop="109dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:text="Item Number :"
            android:id="@+id/textView_item_number"
            android:layout_marginTop="136dp"
            android:layout_below="@+id/textView_item_name"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_item_name"
            android:ems="4"
            android:layout_alignBottom="@+id/textView_item_name"
            android:layout_marginLeft="115dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:layout_marginLeft="130dp"
            android:id="@+id/editText_item_number"
            android:layout_alignBottom="@+id/textView_item_number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar code number"
            android:id="@+id/textView_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/button"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/editText_item_number"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
